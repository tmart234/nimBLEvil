+static int
+ble_hs_hci_vendor_raw_tx(uint8_t *data, int len)
+{
+    int rc;
+    uint16_t flags;
+    uint8_t *payload;
+    size_t payload_len;
+    
+    if (len < 3) {
+        return BLE_HS_EBADDATA;
+    }
+    
+    flags = le16toh(*(uint16_t *)data);
+    payload = data + 2;
+    payload_len = len - 2;
+    
+    /* Set PHY flags */
+    g_phy_raw_tx_mode = (flags & 0x01);
+    g_phy_disable_whiten = (flags & 0x02);
+    
+    /* Send raw payload */
+    struct os_mbuf *txbuf = ble_hci_trans_alloc_buf();
+    if (!txbuf) return BLE_HS_ENOMEM;
+    os_mbuf_append(txbuf, payload, payload_len);
+    rc = ble_phy_tx(txbuf, BLE_PHY_TX_PWR_DBM_0);
+    
+    /* Reset PHY flags */
+    g_phy_raw_tx_mode = false;
+    g_phy_disable_whiten = false;
+    
+    return rc;
+}
